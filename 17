import cv2
import numpy as np
import matplotlib.pyplot as plt

# Load image in grayscale (use your actual image path here)
img = cv2.imread(r"C:\Users\yasaswini kuchi\OneDrive\Pictures\Screenshots\Screenshot 2026-02-11 095427.png", 0)

if img is None:
    print("Error: Image not loaded. Check the file path.")
    exit()

# Define Laplacian mask with diagonal neighbors
laplacian_kernel = np.array([[1, 1, 1],
                             [1, -8, 1],
                             [1, 1, 1]])

# Apply the Laplacian filter to the image
laplacian_img = cv2.filter2D(img, -1, laplacian_kernel)

# Sharpen the image by subtracting Laplacian filtered image from original
sharpened_img = cv2.subtract(img, laplacian_img)

# Display results
plt.figure(figsize=(12,4))

plt.subplot(1,3,1)
plt.imshow(img, cmap='gray')
plt.title('Original Image')
plt.axis('off')

plt.subplot(1,3,2)
plt.imshow(laplacian_img, cmap='gray')
plt.title('Laplacian Filtered')
plt.axis('off')

plt.subplot(1,3,3)
plt.imshow(sharpened_img, cmap='gray')
plt.title('Sharpened Image')
plt.axis('off')

plt.show()
