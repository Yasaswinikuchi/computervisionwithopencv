import cv2
import numpy as np

img = cv2.imread(r"C:\Users\yasaswini kuchi\OneDrive\Pictures\Screenshots\Screenshot 2026-02-11 095648.png")
rows, cols = img.shape[:2]

M = np.float32([[1,0,100],[0,1,50]])  # Move 100 right, 50 down
translated = cv2.warpAffine(img, M, (cols, rows))

cv2.imshow("Original", img)
cv2.imshow("Translated", translated)
cv2.waitKey(0)
cv2.destroyAllWindows()
